  name: my-app-deployment-nginx
  labels:
    app: my-app
spec:
  replicas: 4
  selector:
    matchLabels:
      app: my-app
  template:
    metadata:
      labels:
        app: my-app
    spec:
      containers:
        - name: my-app-container
          image: my-app:1.0.0
          ports:
            - containerPort: 8080
          env:
